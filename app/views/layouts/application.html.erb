<body>

  <div class="navbar navbar-fixed-top">
    <div class="navbar-inner">
      <div class="container">
        <a class="btn btn-navbar" data-toggle="collapse" data-target=".nav-collapse">
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
        </a>
        <a class="brand" href="<%= root_path %>">Controle de Contas</a>
        <div class="nav-collapse">
          <ul class="nav">
            <li class="active"><a href="<%= root_path %>">Home</a></li>
            <li><a href="#about">About</a></li>
            <li><a href="#contact">Contact</a></li>
          </ul>
        </div><!--/.nav-collapse -->
        
        <div id="fb-root" style="width: 61%; margin-top: 8px; height: 0.7px;">
          <div class="fb-like" data-href="http://192.168.0.5:3000" data-send="true" data-layout="button_count" data-width="80" data-show-faces="true" data-colorscheme="dark"></div>
        <script>(function(d, s, id) {
          var js, fjs = d.getElementsByTagName(s)[0];
          if (d.getElementById(id)) return;
          js = d.createElement(s); js.id = id;
          js.src = "//connect.facebook.net/pt_BR/all.js#xfbml=1&appId=342319852509582";
          fjs.parentNode.insertBefore(js, fjs);
        }(document, 'script', 'facebook-jssdk'));</script>
      </div>
        <% if current_user %>
          <div class="pull-right" style="color: white;">
            Logado como <strong><%= current_user.name %></strong>!
            <%= link_to "Sair", signout_path, :id => "sign_out", :style => "color: white;", :class => "btn btn-primary btn-large" %>
          </div>
        <% else %>
          <%= link_to "FaÃ§a login com Facebook", "/auth/facebook", :id => "sign_in", :style => "color: white;", :class => "btn btn-primary btn-large pull-right"  %>
        <% end %>
        
      </div>
    </div>
  </div>

  <div class="container">

    <div class="row">
      <div class="span4" style="width:19%">
        <h2>Contas a Pagar</h2>
        <p>
          Consulte/Cadastre/Edite/Apague suas Contas pendentes!
        </p>
        <p>
          <%= link_to "Ver Detalhes >>", conta_pagars_path, :class => "btn" %>
        </p>
      </div>

      <div class="span4" style="width:22%">
        <h2>Pessoas a Pagar</h2>
        <p>
          Consulte/Cadastre/Edite/Apague Pessoas que precisa pagar!
        </p>
        <p>
          <%= link_to "Ver Detalhes >>", pessoa_pagars_path, :class => "btn" %>
        </p>
      </div>

      <div class="span4" style="width:22%">
        <h2>Contas a Receber</h2>
        <p>
          Consulte/Cadastre/Edite/Apague suas Contas a Receber
        </p>
        <p>
          <a class="btn" href="#">Ver Detalhes &raquo;</a>
        </p>
      </div>

      <div class="span4" style="width:24%">
        <h2>Pessoas a Receber</h2>
        <p>
          Consulte/Cadastre/Edite/Apague Pessoas que precisa receber!
        </p>
        <p>
          <a class="btn" href="#">Ver Detalhes &raquo;</a>
        </p>
      </div>
    </div>

    
      <%= yield %>
    

    <footer class="footer">
        <p class="pull-right"><a href="#">Back to top</a></p>
        <p>&copy; Company 2012</p>
    </footer>
  </div>
  <%= javascript_include_tag "application" %>
  <%= javascript_include_tag "bootstrap" %>
  <%= javascript_include_tag "bootstrap.min" %> 
</body>

</html>
